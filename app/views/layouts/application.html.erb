<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= render "layouts/stylesheets" %>
  <%= javascript_include_tag :defaults, 'chosen.jquery', 'bootstrap', 
      'nested_form', 'dynamic_select', 'rails.validations' %>
  <%= csrf_meta_tag %>
  <%= yield(:head) %>
</head>
<body>
  <div class="container">
    <div class="row"><%= render "layouts/header" %><br /></div>
    <div class='row'>
      <div class="span8">
        <section class="round">
          <% flash.each do |key, value| %>
            <%= content_tag(:div, value, :class => "flash #{key}") %>
          <% end %>
          <%= yield %>
        </section>
      </div>
      <div class="span4">
        <%= render :partial => 'carts/show' %>
      </div>
    </div>
    <%= debug(params) if Rails.env.development? %>
  </div>
</body>
</html>
